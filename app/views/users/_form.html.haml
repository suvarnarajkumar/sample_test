= form_for @user, html: { class: "form form-horizontal user", style: "width:50%;" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control'
    = f.error_span(:name)
  .form-group
    = f.label :email, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :email, class: 'form-control'
    = f.error_span(:email)
  .form-group
    = f.label :role, class: 'control-label col-lg-2'
    .col-lg-10
      = f.select_tag :role, options_for_select([['No Access', 0],['View Access', 1],['Add Access', 2]], [role_name(@user.role), @user.role]), class: 'form-control'
    = f.error_span(:role)
  .form-group
    = f.label :picture, class: 'control-label col-lg-2'
    .col-lg-10
      = f.file_field :picture, class: 'form-control'
      %br
      - if @user.picture.attached?
        = image_tag url_for(@user.picture), class: "responsive", style: "width:50%;text-align:center;"
    = f.error_span(:picture)
    
  %br
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default'
