- model_class = User
.page-header
  %h1=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize
= form_for @user,as: :user, url: create_user_path(@post), html: { class: "form form-horizontal user", style: "width:50%;" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :email, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :email, class: 'form-control', required: true
    = f.error_span(:email)
  .form-group
    = f.label :role, class: 'control-label col-lg-2'
    .col-lg-10
      = f.select_tag :role, options_for_select([['No Access', 0],['View Access', 1],['Add Access', 2]]), class: 'form-control'
    = f.error_span(:role)
    
  %br
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default'
